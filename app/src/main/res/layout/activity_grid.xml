<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="@bool/isNotQAndUp"
    android:clipToPadding="@bool/isNotQAndUp"
    android:fitsSystemWindows="@bool/isQAndUp"
    android:orientation="vertical">

    <ViewStub
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/search_layout" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="@bool/isNotQAndUp">

        <GridView
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fastScrollEnabled="true"
            android:numColumns="@integer/column_app_item"

            android:stretchMode="columnWidth"
            tools:listitem="@layout/item_app" />

        <FrameLayout
            android:id="@android:id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <include layout="@layout/empty_tip_layout" />

            <include layout="@layout/loading_layout" />
        </FrameLayout>

    </FrameLayout>


</LinearLayout>